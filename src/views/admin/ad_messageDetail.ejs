<div class="row">
  <div class="col-12">
    <div class="card my-4">
      <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-1">
        <div
          class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3"
        >
          <h4 class="text-white text-capitalize ps-4">MESAJ</h4>
        </div>
      </div>
      <div class="card-body px-0 pb-2">
        <div class="card-body mx-2">
          <div class="card-body">
            <h5><%- message.title %></h5>
          </div>
          
          <p class="card-text">
            <%- message.content%>         
         </p>
          <p class="card-text">
            <% date = new Date( message.createdAt) %> <% aylar =
                  ['01',
                  '02',"03","04","05","06","07","08","09","10","11","12"]; %>
            <small class="text-muted"><%- date.getDate() + "." + aylar[date.getMonth()] + "." +
                date.getFullYear() %> tarihinde g√∂nderildi.</small>
          </p>
        </div>
      </div>
      <div class="card-body d-flex flex-column align-items-end" >
       <div class="col mx-4">
        <h5 class="d-block"><%- message.name %> <%- message.surname %></h5>
        <small class="text-muted d-block text-center">Tel no: <%- message.phone_num %></small>
       </div>
            
            
                
            
          
     
        
      </div>

      <div class="card-body px-6">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <a
            onclick="btn(this)"
            href="/yonetim/mesajlar"
            class="btn bg-gradient-info"
            >Geri</a
          >
        </div>
      </div>
      <script src="/admin/js/btn.js"></script>
    </div>
  </div>
</div>
