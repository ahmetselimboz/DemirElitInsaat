<div class="about-top">
  <img src="/frontend/assets/870859.jpg" alt="" />
  <div class="about-text-top">
    <div class="about-bottom-text">
      <hr class="about-bottom-line" />
      <h6>İletişim</h6>
    </div>
  </div>
</div>

<section>
  <div class="about-panel">
    <div class="about-area">
      <div class="house-title-area">
        <hr class="house-underline js-scroll slide-left" />
        <h3 class="text-uppercase js-scroll slide-left">İletişim</h3>
      </div>
      <div class="contact-content">
        <div class="contact-map js-scroll slide-left">
          <%- contact.location_link %>
        </div>
        <div class="contact-info js-scroll slide-right">
          <h3>İletişim Bilgileri</h3>
          <hr class="underline" />
          <span>
            <i class="fa-solid fa-phone"></i>&nbsp; <%- contact.phone1 %></span
          >
          <span
            ><i class="fa-solid fa-envelope"></i>&nbsp; <%- contact.mail
            %></span
          >
          <span
            ><i class="fa-solid fa-location-dot"></i>&nbsp; <%- contact.location
            %></span
          >
        </div>
      </div>
    </div>
    <div class="about-area">
      <div class="house-title-area">
        <hr class="house-underline js-scroll slide-left" />
        <h3 class="text-uppercase js-scroll slide-left">Bize Ulaş!</h3>
        <h5 class="js-scroll slide-left">
          <b>Demir Elit İnşaat</b> olarak sizleri hayallerinizdeki evlerle
          buluşturmayı <br />
          kendimize görev biliyor ve bu amaç uğrunda var gücümüzle
          çalışmalarımızı sürdüyoruz.
        </h5>
      </div>
      <div class="comment-container js-scroll fade-in-bottom">
        <form action="/mesaj" method="post">
          <div class="small-comment">
            <div class="top-comment">
              <div id="com-pad">
                <label for="Name">İsim</label>
                <input id="sm-input" type="text" name="name" required/>
              </div>
              <div id="com-pad">
                <label for="Name">Soyisim</label>
                <input id="sm-input" type="text" name="surname" required/>
              </div>
            </div>
            <div class="bottom-comment">
              <div id="com-pad">
                <label for="Name">Başlık</label>
                <input id="sm-input" type="text" name="title" required/>
              </div>
              <div id="com-pad">
                <label for="Name">Telefon Numarası <small>(Örnek: 555 444 6688)</small></label>
                <input id="sm-input"  type="tel" pattern="[0-9]{3} [0-9]{3} [0-9]{4}" name="phone_num" required/>
             
              </div>
            </div>
          </div>
          <div class="comment-desc">
            <label for="desc">İçerik</label>
            <textarea id="bg-input" type="text" name="content" rows="5" required></textarea>
          </div>
          <div class="comment-btn-place">
            <button type="submit" class="comment-btn" >Gönder</button>
          </div>
        </form>
      </div>


    </div>
  </div>
</section>
