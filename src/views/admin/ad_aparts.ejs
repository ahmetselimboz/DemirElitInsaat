<div class="row">
  <div class="col-12">
    <div class="card my-4">
      <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-1">
        <div
          class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3"
        >
          <h4 class="text-white text-capitalize ps-4">PROJELER</h4>
        </div>
        <div class="card-body">
          <h6 class="text-secondary">
            Bu panel üzerinden tüm projelere erişebilir, yapmak istediğiniz
            işlemleri gerçekleştirebilirsiniz.
          </h6>
        </div>
      </div>
      <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
          <table class="table align-items-center mb-0">
            <thead>
              <tr>
                <th
                  class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                >
                  Proje Adı
                </th>
                <th
                  class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                >
                  Adres
                </th>
                <th
                  class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                >
                  Durum
                </th>
                <th
                  class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                >
                  Eklenme Tarihi
                </th>
                <th
                  class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                >
                  Güncelle
                </th>
                <th
                  class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                >
                  Sil
                </th>
              </tr>
            </thead>
            <tbody>
              <% for( let index = 0; index < apart.length; index++ ) { %>
              <tr>
                <td>
                  <div class="d-flex px-2 py-1">
                    <div>
                      <img
                        src="https://drive.google.com/uc?export=view&id=<%- apart[index].images[0].id %>"
                        class="avatar avatar-sm me-3 border-radius-lg"
                        alt="user1"
                      />
                    </div>
                    <div class="d-flex flex-column justify-content-center">
                      <h6 class="mb-0 text-sm">
                        <%- apart[index].project_name %>
                      </h6>
                    </div>
                  </div>
                </td>
                <td>
                  <p class="text-xs font-weight-bold mb-0">
                    <%- apart[index].adress %>
                  </p>
                </td>
                <td class="align-middle text-center text-sm">
                  <% if (apart[index].project_status == "Tamamlandı") { %>
                  <span class="badge badge-sm bg-gradient-success">
                    <%- apart[index].project_status %></span
                  >

                  <% } else if (apart[index].project_status == "Devam Ediyor")
                  {%>
                  <span class="badge badge-sm bg-gradient-info">
                    <%- apart[index].project_status %></span
                  >

                  <% } else if (apart[index].project_status == "Planlandı") { %>
                  <span class="badge badge-sm bg-gradient-secondary">
                    <%- apart[index].project_status %></span
                  >
                  <% } %>
                </td>
                <td class="align-middle text-center">
                  <% date = new Date( apart[index].createdAt) %> <% aylar =
                  ['01',
                  '02',"03","04","05","06","07","08","09","10","11","12"]; %>
                  <span class="text-secondary text-xs font-weight-bold">
                    <%- date.getDate() + "." + aylar[date.getMonth()] + "." +
                    date.getFullYear() %></span
                  >
                </td>
                <td class="align-middle text-center">
                  <a
                    onclick="btn(this)"
                    href="/yonetim/projeler/daire-guncelle/<%- apart[index].id %>"
                    class="btn bg-gradient-success shadow-success"
                  >
                    GÜNCELLE
                  </a>
                </td>
                <td class="align-middle text-center">
                  <a
                    onclick="btn(this)"
                    href="/yonetim/projeler/daire-sil/<%- apart[index].id %>"
                    class="btn bg-gradient-danger shadow-danger"
                  >
                    SİL
                  </a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-body px-6">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <a
            onclick="btn(this)"
            href="/yonetim/projeler/daire-ekle"
            class="btn bg-gradient-info"
            >Proje Ekle</a
          >
        </div>
      </div>
      <script src="/admin/js/btn.js"></script>
    </div>
  </div>
</div>
